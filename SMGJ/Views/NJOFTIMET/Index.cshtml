@*@model IEnumerable<SMGJ.Models>*@
@model IEnumerable<SMGJ.Models.Njoftimet_e_reja>
@using SMGJ.Models
@using SMGJ.Controllers
@{
    ViewBag.Title = "Index";
    SMGJDB db = new SMGJDB();


}

<head>
    <link href="~/Content/theme/vendor/sweetalert/sweet-alert.css" rel="stylesheet" media="screen">
    <link href="~/Content/theme/vendor/sweetalert/ie9.css" rel="stylesheet" media="screen">
    <link href="~/Content/theme/vendor/toastr/toastr.min.css" rel="stylesheet" media="screen">
</head>
<br />

<section>
    <div class="row">
        <div class="col-sm-8">
            <h1 class="mainTitle" style="color:royalblue; font-family: Shakespeare, 'Times New Roman', Times, serif">Njoftimet</h1>
        </div>
    </div>
    @*<hr style="height:2px;border:none;color:#333;background-color:#333; width:100%;" />*@
</section>

@*<hr style="height: 30px; width: 100%"/>*@
<div class="container-fluid container-fullw bg-white">

    <div class="row margin-top-12 ">
        <div class="col-md-12">
            <div class="panel panel-white">
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
                        <thead>
                            <tr>
                                <th>
                                    Dërguesi
                                </th>
                                <th class="hidden-xs">
                                    Koha
                                </th>
                                <th>
                                    Mesazhi
                                </th>
                                <th class="hidden-xs">
                                    Gjedhi
                                </th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Emri)
                                </td>
                                <td>
                                    @*@Html.DisplayFor(modelItem => item.Koha)*@
                                    @item.Koha.ToString("dd/MMMM/yyyy")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Mesazhi)
                                </td>
                                <td>
                                    @*@Html.DisplayFor(modelItem => item.GjedhiId)*@
                                    @{
                                        var gjedhi = (from gj in db.GJEDHAT_PARAMETRAT
                                                      where gj.ID == item.GjedhiId
                                                      select gj.GJEDHI.Emri).FirstOrDefault();
                                    }

                                    @gjedhi
                                </td>


                            </tr>
                        }

                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
<script src="~/Content/theme/vendor/sweetalert/sweet-alert.min.js"></script>
<script src="~/Content/theme/vendor/toastr/toastr.min.js"></script>
<script src="~/Content/theme/assets/js/main.js"></script>
<script src="~/Content/theme/assets/js/ui-notifications.js"></script>
