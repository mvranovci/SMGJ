@model IEnumerable<SMGJ.Models.MENU>
@{
    ViewBag.Title = "Index";
}
<section id="page-title">
    <div class="row">
        <div class="col-sm-8">
            <h1 class="mainTitle">Lista e menu-ve te sistemit</h1>
        </div>
    </div>
</section>
<div class="container-fluid container-fullw bg-white">
    <div class="row">
        <div class="col-md-12">
            <a href="@Url.Action("Create","MENU")" class="btn btn-green">Regjistro</a>
        </div>
    </div>
    <div class="row margin-top-15 ">
        <div class="col-md-12">
            <div class="panel panel-white">
                <div class="panel-heading">
                    <h5 class="panel-title">Lista e </h5>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th class="hidden-xs">Controller</th>
                                <th>
                                    Action
                                </th>
                                <th class="hidden-xs"> Statusi</th>
                                <th>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td class="hidden-xs">
                                        @item.Controller
                                    </td>
                                    <td>@item.Action_Metoda</td>
                                    <td class="hidden-xs">
                                        @{
                                            var klasa = "success";
                                            var pershktimi = "Aktive";
                                            if (item.Aktiv != true)
                                            {
                                                klasa = "danger";
                                                pershktimi = "Pasive";
                                            }
                                        }
                                        <span class="label label-sm label-@klasa">@pershktimi</span>

                                    </td>
                                    <td>
                                        <div class="visible-md visible-lg hidden-sm hidden-xs">
                                            <a href="@Url.Action("Edit","MENU" , new {id=item.ID})" class="btn btn-transparent btn-xs" tooltip-placement="top" tooltip="Edit"><i class="fa fa-pencil"></i></a>
                                            <a href="#" class="btn btn-transparent btn-xs tooltips" tooltip-placement="top" tooltip="Remove"><i class="fa fa-times fa fa-white"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
